FFMPEG_OPTS='-b:a 265k -f mp3'

if ! check-command-exists ffmpeg ; then
  echo "ERROR 44: ffmpeg was not found on the system."
  exit 1
fi

for f in "$@" ; do
  IF="$f"
  OF="`audioutil-stripextension \"$IF\"`.mp3"
  printf "INFO: converting file \"$IF\" -> \"$OF\"... "
  MSG=`ffmpeg -i "$IF" $FFMPEG_OPTS "$OF" 2>&1`
  if [ $? -ne 0 ] ; then
    echo "FAIL"
    echo "WARNING 56: ffmpeg returned nonzero exit code, error message follows"
    echo "$MSG"
  else
    echo "DONE"
  fi 
done 
